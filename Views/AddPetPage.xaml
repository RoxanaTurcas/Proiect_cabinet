<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect.Views.AddPetPage"
             Title="Adaugă Animal Nou">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Detalii Animal" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Entry x:Name="NumeEntry" Placeholder="Numele animalului" />

            <Label Text="Specie:" FontSize="14" TextColor="Gray"/>
            <Picker x:Name="SpeciePicker" Title="Selectează specia">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Câine</x:String>
                        <x:String>Pisică</x:String>
                        <x:String>Pasăre</x:String>
                        <x:String>Rozător</x:String>
                        <x:String>Altul</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Entry x:Name="RasaEntry" Placeholder="Rasa (ex: Labrador, Persană)" />

            <Entry x:Name="VarstaEntry" 
                   Placeholder="Vârsta (ani)" 
                   Keyboard="Numeric" />

            <Label Text="Gen:" FontSize="14" TextColor="Gray"/>
            <Picker x:Name="GenPicker" Title="Selectează genul">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Mascul</x:String>
                        <x:String>Femelă</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Salvează Animalul"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,20,0,0"/>

            <Button Text="Anulează"
                    Clicked="OnCancelClicked"
                    BackgroundColor="Transparent"
                    TextColor="Red" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>